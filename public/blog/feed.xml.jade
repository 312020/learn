doctype xml
rss(version="2.0", xmlns:atom="http://www.w3.org/2005/Atom")
  channel
    title= siteTitle
    link #{ jsbin }/blog
    description The JS Bin Blog
    atom:link(href="#{ jsbin }/blog/feed.xml", rel="self", type="application/rss+xml")
    for post, slug in public.blog._data
      if (post.title)
        item
          title= post.title
          description <![CDATA[!{ partial(slug) }]]>
          pubDate= new Date(post.date)
          link #{ jsbin }/blog/#{ slug }
          guid(isPermaLink="true") #{ jsbin }/blog/#{ slug }
